<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only"> Toggle navigation </span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>

      <%= link_to root_path, class: "navbar-brand" do %>
        Basketball Kicks
      <%- end -%>
    </div>
    
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        
        
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">@user.username<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'View all users', users_path %></li>
                <li><%= link_to 'Edit account info', edit_user_registration_path %></li>
                <li><%= link_to 'My account', user_path(current_user.id) %></li>
                <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
                </li>
              </ul>
            </li>
            <li> <a href="#contact" data-toggle="modal"> Contact </a> </li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
            <li><%= link_to 'Sign up', new_user_registration_path %></li> 
            <li> <a href="#contact" data-toggle="modal"> Contact </a> </li>
          <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="modal fade" id="contact" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4>Contact</h4>
      </div>
      <div class="modal-body">
        <p>For general inquiries please e-mail contact@basketballkicks.com </p>
      </div>
      <div class="modal-footer">
        <a class="btn btn-primary" data-dismiss="modal">Close </a>
      </div>
    </div>
  </div>
</div>