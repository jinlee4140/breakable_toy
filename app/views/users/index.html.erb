<% if current_user.present? %>
  <div class="row text-center">
    <div class="medium-12 medium-centered columns text-center">
      <h1> <%= @users %> </h1>

      <table align="center">
        <thead>
          <tr>
            <th class="text-center"> Username </th>
            <th class="text-center"> E-mail </th>
            <th class="text-center"> Delete Account? </th>
          </tr>
        </thead>
        <tbody>
          <% @user.each do |user| %>
            <tr>
              <td> <%= link_to user.username, user_path(user) %> </td>
              <td> <%= user.email%> </td>
              <td> <%= link_to "Delete User", user_path(user), method: :delete, class: "btn btn-danger" %> </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
<% else %>
    <h1 class="text-center"> YOU DO NOT HAVE PERMISSION TO ACCESS THIS RESOURCE! </h1>
<% end %>


