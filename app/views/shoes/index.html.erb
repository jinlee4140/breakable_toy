<div class="row">
  <div class="medium-12 medium-centered columns">
    <h1> List of basketball shoes</h1>
  </div>
</div>


<div class="row">
  <div class="medium-12 medium-centered columns">
    <ul>
      <% @shoes.each do |shoe| %>
        <li><%= link_to shoe.name, shoe %></li>
      <% end %>
    </ul>
    <%= paginate @shoes %>
  </div>
</div>

